<div class="container mt-5">
  <div class="text-center">
    <h1><%= @list.name %></h1>
  </div>
  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: 'btn btn-primary' %>

  <div class="cards-container">
    <div class="row">
      <% @list.movies.each do |movie| %>
          <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
        <div class="col-12 col-sm-6 col-md-4">
          <div class="card-trip mt-3">
            <%= image_tag movie.poster_url %>
            <div class="card-trip-infos">
              <div>
                <h2><%= movie.title %></h2>
                <p><%= movie.overview%></p>
              </div>
              <h2 class="card-trip-pricing"><%= movie.rating%></h2>
              <%= link_to "Remove", bookmark_path(bookmark), method: :delete, data:{confirm: "Are you sure you want to delete this movie?" }, class: 'btn btn-danger btn-sm' %>
            </div>

          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
